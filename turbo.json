{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "env": ["NODE_ENV", "TON_API_KEY", "TELEGRAM_BOT_TOKEN"],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "go-api#start": {
      "persistent": true,
      "cache": false
    },
    "contracts#build": {
      "outputs": ["build/**"]
    }
  }
}