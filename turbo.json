{
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "env": [
        "NODE_ENV",
        "TON_API_KEY", 
        "TELEGRAM_BOT_TOKEN"
      ],
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint": {
      "outputs": []
    }
  }
}