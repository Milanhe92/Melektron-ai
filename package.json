{
  "name": "melektron-ai",
  "version": "1.0.0",
  "scripts": {
    "prebuild": "pnpm install --no-frozen-lockfile && pnpm run build --filter=./packages/quantum-core && pnpm run build --filter=./packages/ton-client",
    "build:web": "pnpm run build --filter=./apps/web",
    "build": "pnpm run build --filter=./apps/web",
    "dev": "pnpm run dev --filter=./apps/web",
    "deploy": "cd apps/web && pnpm run deploy"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "typescript": "^5.0.4"
  },
  "packageManager": "pnpm@8.6.0"
}